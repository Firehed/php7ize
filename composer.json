{
    "name": "firehed/php7ize",
    "description": "Tools to quickly add PHP7 features to your existing codebase",
    "type": "plow-command",
    "extra": {
        "plow": [
            "Firehed\\PHP7ize\\Runner"
        ]
    },
    "require-dev": {
        "firehed/arctools": "~1.0",
        "phpunit/phpunit": "~4.6"
    },
    "autoload": {
        "psr-4": {
            "Firehed\\PHP7ize\\": ["src/", "tests/"]
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Eric Stern",
            "email": "eric@ericstern.com"
        }
    ],
    "bin": [
        "bin/php7ize"
    ],
    "require": {
        "firehed/plow": "*"
    }
}
